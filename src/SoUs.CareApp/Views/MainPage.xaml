            <CollectionView Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding TodaysAssignments}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Assignment">
                    <Grid Padding="8"
                          ColumnDefinitions="4*, 8*, 4*"
                          WidthRequest="700">
                        <Label Text="{Binding Name}"/>
                        <Frame BackgroundColor="{StaticResource PrimaryLight}"
                               HeightRequest="128">
                            <Grid RowDefinitions="50, 200, 50">
                                <Label Text="CN"
                                       Grid.Row="0"
                                       Grid.Column="0"/>
                                <Label Grid.Row="0"
                                       Grid.Column="1">
                                    <Label.Text>
                                        <MultiBinding Converter="{StaticResource TimeRangeConverter}">
                                            <Binding Path="TimeStart" />
                                            <Binding Path="TimeEnd" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                                <Label Text="Room Number"
                                       Grid.Row="0"
                                       Grid.Column="2"/>
                                <Label Text="{Binding Resident.Name}"
                                       Grid.Row="1"
                                       Grid.Column="3"/>
                                <CheckBox Grid.Row="2"
                                          Grid.Column="2"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsEnabled="{Binding IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.RowSpan="3"
                           Grid.ColumnSpan="2"
